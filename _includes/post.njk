---
layout: base.njk
---
<section class="section blog-post">
  <div class="container">
    <article class="post-content">
      <header class="post-header">
        <p class="post-date">{{ date | dateFormat }}</p>
        <h1>{{ title }}</h1>
        {% if image %}
        <img src="{{ image }}" alt="{{ title }}" class="post-featured-image">
        {% endif %}
      </header>
      <div class="post-body">
        {{ content | safe }}
      </div>
      <footer class="post-footer">
        {% if tags %}
        <div class="post-tags">
          {% for tag in tags %}
          <span class="badge">{{ tag }}</span>
          {% endfor %}
        </div>
        {% endif %}
        <a href="/blog/" class="btn btn-outline">Back to Blog</a>
      </footer>
    </article>
  </div>
</section>
